# 基础配置
VITE_APP_TITLE=IntelliLearn
VITE_APP_DESCRIPTION=智能在线编程学习与评测平台
VITE_APP_VERSION=1.0.0

# 默认语言
VITE_DEFAULT_LOCALE=zh-CN

# API配置
VITE_API_URL=http://localhost:9000/api

# 认证配置
VITE_AUTH_STORAGE_KEY=intellilearn_auth
VITE_AUTH_TOKEN_EXPIRES=7

# 社交登录配置
VITE_GITHUB_CLIENT_ID=your_github_client_id
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_WECHAT_APP_ID=your_wechat_app_id

# 界面配置
VITE_DEFAULT_THEME=light
VITE_DEFAULT_FONT_SIZE=16
VITE_ENABLE_ANIMATIONS=true

# 功能开关
VITE_ENABLE_PWA=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_TWO_FACTOR=true

# 编辑器配置
VITE_CODE_EDITOR_THEME=vs-dark
VITE_CODE_EDITOR_FONT_SIZE=14
VITE_CODE_EDITOR_TAB_SIZE=4
VITE_CODE_EDITOR_AUTO_SAVE=true

# AI助手配置
VITE_ENABLE_AI_ASSISTANT=true
VITE_AI_ASSISTANT_ENDPOINT=http://localhost:9000/api/ai/assistant

# 性能配置
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_COMPRESSION=true

# 调试配置
VITE_ENABLE_LOGGER=true
VITE_LOG_LEVEL=info

# 服务器配置
VITE_PORT=3000
VITE_HOST=localhost