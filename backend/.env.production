# 应用基础配置
PORT=9000
HOST=0.0.0.0
NODE_ENV=production
API_VERSION=v1
API_PREFIX=/api
BASE_URL=https://api.intellilearn.example.com
FRONTEND_URL=https://intellilearn.example.com

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/intellilearn
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_DEBUG=false

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your_production_jwt_secret_key
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_production_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=30d

# 社交登录配置 (需要替换为实际值)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=https://api.intellilearn.example.com/api/auth/github/callback

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://api.intellilearn.example.com/api/auth/google/callback

WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret
WECHAT_CALLBACK_URL=https://api.intellilearn.example.com/api/auth/wechat/callback

# 安全配置
CORS_ORIGINS=https://intellilearn.example.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
HELMET_ENABLED=true
COMPRESSION_ENABLED=true