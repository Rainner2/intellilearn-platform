# 应用基础配置
PORT=9000
HOST=localhost
NODE_ENV=development
API_VERSION=v1
API_PREFIX=/api
BASE_URL=http://localhost:9000
FRONTEND_URL=http://localhost:3000
APP_NAME=IntelliLearn Platform
APP_DESCRIPTION=智能在线编程学习与评测平台

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_DIR=logs

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/intellilearn
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_DEBUG=false

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=30d

# 加密配置
PASSWORD_SALT_ROUNDS=10
ENCRYPTION_KEY=your_encryption_key

# 社交登录配置
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# 邮件配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_NAME=IntelliLearn
SMTP_FROM_EMAIL=no-reply@intellilearn.com

# 评测系统配置
JUDGER_HOST=localhost
JUDGER_PORT=8080
JUDGER_TOKEN=your_judger_token
JUDGER_TIMEOUT=30000
JUDGER_CONCURRENT_LIMIT=5

# 文件存储配置
STORAGE_TYPE=local # local, s3, oss
STORAGE_LOCAL_PATH=uploads
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=
STORAGE_S3_ACCESS_KEY=
STORAGE_S3_SECRET_KEY=

# 缓存配置
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# 安全配置
CORS_ORIGINS=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# 会话配置
SESSION_SECRET=your_session_secret
SESSION_MAX_AGE=86400000

# AI配置
AI_PROVIDER=openai # openai, deepseek
AI_API_KEY=your_ai_api_key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# 监控配置
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health